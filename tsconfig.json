{
  "compilerOptions": {
    "outDir": "./public/",
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "downlevelIteration": true,
    "lib": ["es2018", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
